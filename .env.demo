# ============================================================================
# IMLADRIS WEBINAR - DEMO ENVIRONMENT CONFIGURATION
# Source: ./scripts/demo-aliases.sh && source .env.demo
# ============================================================================

# Enable Demo Mode - bypasses real AWS/K8s calls with mock responses
export DEMO_MODE=true

# Skip authentication for local demos
export SKIP_AUTH=true

# Use mock data instead of real API calls
export MOCK_DATA=true

# Disable verbose logging (only WARN and DEMO level)
export LOG_LEVEL=warn
export DEMO_LOG_LEVEL=demo

# Mock AWS region (for display purposes)
export AWS_REGION=us-east-1
export AWS_DEFAULT_REGION=us-east-1

# Mock cluster name
export CLUSTER_NAME=imladris-demo-cluster

# VPC CIDRs for monitored region demo
export MONITORED_VPC_CIDRS="10.100.0.0/16,172.31.100.0/24"

# Disable real SNS notifications during demo
export SNS_TOPIC_ARN=""

# Local service configuration
export PORT=8080
export METRICS_PORT=9090
export SERVICE_NAME=banking-core-service
export ENVIRONMENT=demo

# Terraform demo settings
export TF_VAR_environment=demo
export TF_IN_AUTOMATION=true

# Conftest settings
export CONFTEST_POLICY_PATH=./imladris-governance/policies/terraform

# Container registry (local for demo)
export CONTAINER_REGISTRY=localhost:5000

# Demo timeouts (generous for slow connections)
export HTTP_TIMEOUT=30s
export K8S_API_TIMEOUT=60s

# ============================================================================
# CONNECTIVITY SETTINGS (High Latency Tolerance)
# ============================================================================

# Optimistic UI - show success immediately, sync in background
export OPTIMISTIC_UI=true

# Connection retry settings
export MAX_RETRIES=5
export RETRY_DELAY_MS=2000
export CONNECTION_TIMEOUT_MS=30000

# Offline fallback mode - use cached/mock data if connectivity fails
export OFFLINE_FALLBACK=true

# ============================================================================
# VISUAL SETTINGS FOR WEBINAR
# ============================================================================

# Force high contrast output
export FORCE_COLORS=true
export CLICOLOR_FORCE=1

# Simplified output (less noise)
export SIMPLE_OUTPUT=true
