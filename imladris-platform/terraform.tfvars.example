# Imladris Platform Configuration Example
# Copy to terraform.tfvars and customize

aws_region     = "us-east-1"
environment    = "dev"
vpc_cidr       = "10.0.0.0/16"
eks_version    = "1.28"

availability_zones = [
  "us-east-1a",
  "us-east-1b",
  "us-east-1c"
]

# Replace with your actual IAM Identity Center instance ARN
# Format: arn:aws:sso:::instance/ssoins-xxxxxxxxxxxxxxxxx
identity_center_instance_arn = "arn:aws:sso:::instance/ssoins-xxxxxxxxxxxxxxxxx"

# Harbor Secure Registry Configuration (optional)
# harbor_instance_type              = "t3.large"
# harbor_storage_size_gb            = 100
# enable_harbor_trivy_scanner       = true